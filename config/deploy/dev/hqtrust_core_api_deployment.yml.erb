apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: hqtrust-core-api-deployment
  namespace: hqtrust-core-api
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: hqtrust-core-api
    spec:
      containers:
        - name: hqtrust-core-api
          image: 457201446358.dkr.ecr.eu-central-1.amazonaws.com/hqtrust-core-api:commit-<%= current_sha %>
          args: ["bin/bundle exec rails s -p 3000 -b 0.0.0.0"]
          ports:
            - containerPort: 3000
              name: api-http
          livenessProbe:
            httpGet:
              scheme: HTTP
              path: /health
              port: 3000
            initialDelaySeconds: 10
            periodSeconds: 20
            failureThreshold: 5
          readinessProbe:
            httpGet:
              scheme: HTTP
              path: /health
              port: 3000
            initialDelaySeconds: 10
            periodSeconds: 20
            failureThreshold: 5
          env:
            - name: RAILS_ENV
              value: "production"
            - name: REDIS_URL
              value: "redis://redis"
            - name: REDIS_PORT
              value: "6379"
            - name: WHITELISTED_URLS
              value: "https://app.dev.hqfinanz.de"
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: database-url
            - name: SECRET_KEY_BASE
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: secret-key-base
            - name: DEVISE_JWT_SECRET_KEY
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: devise-jwt-secret-key
            - name: SENTRY_URL
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: sentry-url
            - name: LOGENTRIES_TOKEN
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: logentries-token
            - name: AWS_SES_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-ses-access-key-id
            - name: AWS_SES_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-ses-secret-access-key
            - name: HOST_URL
              value: "https://api-core.dev.hqfinanz.de"
            - name: AWS_REGION
              value: "eu-central-1"
            - name: AWS_S3_BUCKET_NAME
              value: "hqfinanz-dev-file-store"
            - name: AWS_S3_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-s3-access-key-id
            - name: AWS_S3_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-s3-secret-access-key
            - name: AWS_S3_ENCRYPTION_PUBLIC_KEY
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-s3-encryption-public-key
            - name: AWS_S3_ENCRYPTION_PRIVATE_KEY
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-s3-encryption-private-key
            - name: AWS_S3_ENCRYPTION_PASSPHRASE
              valueFrom:
                secretKeyRef:
                  name: hqtrust-core-api-secrets
                  key: aws-s3-encryption-passphrase
---
