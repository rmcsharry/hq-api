apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: hqtrust-core-api-deployment
  namespace: hqtrust-core-api
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: hqtrust-core-api
    spec:
      containers:
      - name: hqtrust-core-api
        image: 457201446358.dkr.ecr.eu-central-1.amazonaws.com/hqtrust-core-api:commit-<%= current_sha %>
        ports:
          - containerPort: 3000
            name: api-http
        livenessProbe:
          httpGet:
            scheme: HTTP
            path: /health
            port: 3000
          initialDelaySeconds: 10
          periodSeconds: 20
          failureThreshold: 5
        readinessProbe:
          httpGet:
            scheme: HTTP
            path: /health
            port: 3000
          initialDelaySeconds: 10
          periodSeconds: 20
          failureThreshold: 5
        env:
          - name: RAILS_ENV
            value: "production"
          - name: DATABASE_URL
            valueFrom:
              secretKeyRef:
                name: hqtrust-core-api-secrets
                key: database-url
          - name: SECRET_KEY_BASE
            valueFrom:
              secretKeyRef:
                name: hqtrust-core-api-secrets
                key: secret-key-base
          - name: DEVISE_JWT_SECRET_KEY
            valueFrom:
              secretKeyRef:
                name: hqtrust-core-api-secrets
                key: devise-jwt-secret-key
          - name: SENTRY_URL
            valueFrom:
              secretKeyRef:
                name: hqtrust-core-api-secrets
                key: sentry-url
          - name: LOGENTRIES_TOKEN
            valueFrom:
              secretKeyRef:
                name: hqtrust-core-api-secrets
                key: logentries-token
---
kind: Service
apiVersion: v1
metadata:
  name: hqtrust-core-api-service
  namespace: hqtrust-core-api
spec:
  selector:
    app: hqtrust-core-api
  type: NodePort
  ports:
    - port: 3000
      targetPort: api-http
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: hqtrust-core-api-ingress
  namespace: hqtrust-core-api
  annotations:
    ingress.kubernetes.io/secure-backends: "true"
    kubernetes.io/ingress.class: nginx
    kubernetes.io/ingress.allow-http: "false"
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"
    nginx.ingress.kubernetes.io/whitelist-source-range: <%= whitelisted_ips %>
spec:
  rules:
    - host: "api-core.dev.hqfinanz.de"
      http:
        paths:
          - path: /
            backend:
              serviceName: hqtrust-core-api-service
              servicePort: 3000
  
